<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h2 class="text-center mb-3">Register</h2>
            <%- include ("./message") %>
            <form action="/users/register" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name"  id="name" class="form-control" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>"/>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>"/>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password" value="<%= typeof password != 'undefined' ? password : '' %>"/>
                </div>
                <div class="form-group">
                    <label for="password2">Conform Password</label>
                    <input type="password2" name="password2" id="password2" class="form-control" placeholder="Conform Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>"/>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Register</button>
            </form>
            <div class="text-center">
                <p class="lead mb-0 mt-3">Have an account <a href="/users/login">Login</a></p>
            </div>
        </div>
    </div>
</div>

