<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h2 class="text-center mb-3">Login</h2>
            <%- include ("./message") %>
            <form id="myForm" action="/users/login" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Enter Email" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password" />
                </div>
                <button type="submit" id="submitBtn" class="btn btn-primary btn-block">Login</button>
            </form>
            <div class="text-center">
                <p class="lead mt-4"><a href="/users/forgot">Forget Password</a></p>
                <p class="lead m-0">No account <a href="/users/register">Register</a></p>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
    $("#submitBtn").click(function(){        
        $("#myForm").submit(); 
    });
}); 
</script>